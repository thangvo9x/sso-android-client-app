<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/backgroundPrimary" />
            <gradient android:angle="-90" android:endColor="@color/backgroundPrimary"
                android:startColor="@color/backgroundPrimary" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/backgroundPrimary" />
            <solid android:color="@color/backgroundPrimary" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/backgroundPrimary" />
            <solid android:color="@color/backgroundPrimary" />
        </shape>
    </item>

